{
  "manifest_version": 3,
  "name": "NovaVPN",
  "version": "1.0.0",
  "description": "Secure, Fast, and Reliable VPN Service",
  "permissions": [
    "proxy",
    "storage",
    "notifications",
    "alarms",
    "tabs",
    "webRequest",
    "webRequestAuthRequired"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config/servers.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
